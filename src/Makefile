# Makefile for building the parser and test program.

GHC        = ghc
HAPPY      = happy
HAPPY_OPTS = --array --info --ghc --coerce
ALEX       = alex
ALEX_OPTS  = --ghc
ifeq (, $(shell which bnfc))
        BNFC   = /home/students/inf/PUBLIC/MRJP/bin/bnfc
else
        BNFC   = bnfc
endif


# List of goals not corresponding to file names.

.PHONY : all clean distclean

# Default goal.

all : latc latc_llvm

# Rules for building the parser.

Latte/Abs.hs Latte/Lex.x Latte/Par.y Latte/Print.hs : Latte.cf
	${BNFC} --haskell -d --functor Latte.cf

%.hs : %.y
	${HAPPY} ${HAPPY_OPTS} $<

%.hs : %.x
	${ALEX} ${ALEX_OPTS} $<

latc : Latte/Abs.hs Latte/Lex.hs Latte/Par.hs Latte/Print.hs Backend/Milkremover.hs Frontend/*.hs Main.hs
	${GHC}  Main.hs -o latc

latc_llvm : Latte/Abs.hs Latte/Lex.hs Latte/Par.hs Latte/Print.hs Backend/*.hs Frontend/*.hs  Main.hs
	${GHC} Main.hs -DCOMPILER -o latc_llvm

# Rules for cleaning generated files.

clean :
	-rm -f Latte/*.hi Latte/*.o Latte/*.log Latte/*.aux Latte/*.dvi Latte/*.bak
	-rm -f *.hi *.o
	-rm -f Frontend/*.hi Frontend/*.o

distclean : clean
	-rm -f Latte/*
	-rm -f latc
	-rm -f latc_llvm

